<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/offer_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7">

                <ImageView
                    android:id="@+id/offer_card_image"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pizza" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="8dp">

                <TextView
                    android:id="@+id/offer_card_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="Offer Name"
                    android:textColor="@color/dark_text_color"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/offer_card_restaurant_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/offer_card_offer"
                    android:layout_marginTop="10dp"
                    android:text="Restaurant"
                    android:textColor="@color/dark_text_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/offer_card_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/offer_card_restaurant_title"
                    android:layout_centerInParent="true"
                    android:text="Restaurant Name"
                    android:textColor="@color/dark_text_color"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/offer_card_restaurant">

                    <TextView
                        android:id="@+id/offer_card_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:text="10"
                        android:textColor="@color/dark_text_color"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/offer_card_price_euro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/offer_card_price"
                        android:layout_alignParentBottom="true"
                        android:text="â‚¬"
                        android:textColor="@color/dark_text_color"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/offer_card_distance_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:text=" Km"
                        android:textColor="@color/dark_text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/offer_card_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/offer_card_distance_km"
                        android:layout_toStartOf="@id/offer_card_distance_km"
                        android:layout_alignParentBottom="true"
                        android:text="100"
                        android:textColor="@color/dark_text_color"
                        android:textSize="16sp" />


                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
