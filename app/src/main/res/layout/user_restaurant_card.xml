<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/restaurant_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/restaurant_card_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/restaurant_paris" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/restaurant_card_restaurant_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Restaurant"
                    android:textColor="@color/dark_text_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/restaurant_card_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/restaurant_card_restaurant_title"
                    android:text="Restaurant Name"
                    android:textColor="@color/dark_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/restaurant_card_phone_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/restaurant_card_restaurant"
                    android:layout_marginTop="4dp"
                    android:text="Phone"
                    android:textColor="@color/dark_text_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/restaurant_card_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/restaurant_card_phone_title"
                    android:layout_marginBottom="4dp"
                    android:text="03947587383"
                    android:textColor="@color/dark_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/restaurant_card_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/restaurant_card_phone"
                    android:text="Address"
                    android:textColor="@color/dark_text_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/restaurant_card_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/restaurant_card_address_title"
                    android:text="street nn, place"
                    android:textColor="@color/dark_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/restaurant_card_distance_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/restaurant_card_address_title"
                    android:text=" Km"
                    android:textColor="@color/dark_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/restaurant_card_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/restaurant_card_address_title"
                    android:layout_toLeftOf="@id/restaurant_card_distance_km"
                    android:text="100"
                    android:textColor="@color/dark_text_color"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
